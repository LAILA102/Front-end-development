        <p class="content-text">
            This is the main content area of the application. Click the menu button in the top-left corner 
            to open or close the navigation sidebar. The sidebar provides quick access to different sections 
            of the application.
        </p>
        <p class="content-text">
            On mobile devices, the sidebar will overlay the content when opened, providing a clean and 
            focused navigation experience.
        </p>
    </main>

    <script>
        // Get DOM elements
        const menuToggle = document.getElementById('menuToggle');
        const navPanel = document.getElementById('navPanel');
        
        // Toggle sidebar visibility
        menuToggle.addEventListener('click', function() {
            navPanel.classList.toggle('hidden');
            
            // Update button text for better UX
            if (navPanel.classList.contains('hidden')) {
                menuToggle.textContent = '‚ò∞';
            } else {
                menuToggle.textContent = '‚úï';
            }
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const isMobile = window.innerWidth <= 768;
            const isClickInsideNav = navPanel.contains(event.target);
            const isClickOnToggle = menuToggle.contains(event.target);
            
            if (isMobile && !navPanel.classList.contains('hidden') && 
                !isClickInsideNav && !isClickOnToggle) {
                navPanel.classList.add('hidden');
                menuToggle.textContent = '‚ò∞';
            }
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768 && navPanel.classList.contains('hidden')) {
                navPanel.classList.remove('hidden');
            }
        });
    </script>
